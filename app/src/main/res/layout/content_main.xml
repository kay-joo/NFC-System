<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/tag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="195dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="288dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="NFC를 태그해주세요"
            android:fontFamily="@font/tenada"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="장소명"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/editTagPlaceName"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="NFC UID"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/editTagNfcUid"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="주소"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/editTagAddress"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="전화번호"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/editTagTel"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="시간"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/editCurrentTime"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="@font/tenada"
            android:textSize="13dp" />



        <!--    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">  -->

        <!--
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="2"
            android:text="업로드" /> -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp" >

            <Button
                android:id="@+id/button2"
                android:layout_width="173dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.7"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/tenada"
                android:text="홈으로 가기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/showList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태그 목록 보기"
                android:fontFamily="@font/tenada"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <!-- </LinearLayout> -->

</androidx.constraintlayout.widget.ConstraintLayout>